    <script>
        function Personel(ad,soyad)
        {
            this.Ad=ad;
            this.Soyad=soyad;
        }
    </script>

</head>

<body>

    <script>

        //ES 6 ile geldi
        class Personnel
        {
            constructor(ad,soyad)
            {
                this.Ad = ad;
                this.Soyad=soyad;
            }
        } 


        //Object Oluşturma Yöntemleri

        let obj1 = new Object();

        let obj2 = new Personel("Cevdet","Dursun");        // dikkat!!! iki personel aynı değil. iki ayrı örnek var.

        let obj3 = new Personnel("Selami","Dogan");
        document.writeln(obj3.Ad);

        let obj4 = {Ad:"dursun",Soyad:"Durmasin"};         //JSON(Javascript Object Notation) 

        let obj5= {}; //object
        //[] => dizi
        //{} => object
        //"Ad":"Cevdet" =>property
        
    </script>
</body>
